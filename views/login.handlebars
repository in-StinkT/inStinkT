<form class='w-50' id='registration-form'>
  <div class='row mx-auto'>
    <div class='form-group col-sm-3'>
      <label for="firstNameInput">First Name</label>
      <input class='form-control' id='firstNameInput' placeholder='First'>
    </div>
    <div class='form-group col-sm-3'>
      <label for="lastNameInput">Last Name</label>
      <input class='form-control' id='lastNameInput' placeholder='Last'>
    </div>
  </div>
  <div class='row mx-auto'>
    <div class='form-group col-sm-6'>
      <label for="emailInput">Email</label>
      <input class='form-control' id='emailInput' placeholder='Email Address'>
    </div>
  </div>
  <div class='row mx-auto'>
    <div class='form-group col-sm-6'>
      <label for="passwordInput">Password</label>
      <input type='password' class='form-control' id='passwordInput' placeholder='Password'>
    </div>
  </div>
  <div class='row mx-auto'>
    <div class='form-group col-sm-6'>
      <label for='passwordConfirmInput'>Confirm Password</label>
      <input type='password' class='form-control' id='passwordConfirmInput' placeholder='Confirm Password'>
    </div>
  </div>
  <div class='row mx-auto my-4'>
    <div class='form-group col-sm-6'>
      <button type="submit" class='btn btn-primary form-control'>Register</button>
    </div>
  </div>
</form>

<script src="./js/login.js"></script>