<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>inStinkT</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  <link rel="stylesheet" href="../public/css/utility.css">
  <link rel="stylesheet" href="../public/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css">
</head>

<body>
  <main>
    <header>
          {{> header}}
    </header>

    <div>
      <div class="main-container">
          {{{ body }}} 
      </div>
    </div>
    {{!-- next page/previous page buttons --}}
    {{#if products}}
    <div class="button-container">
      {{#if notLast}}
        <a class="nextPageAnchor"href="/product/page={{nextP}}">
          <button class="nextPage">Next Page</button>
        </a>
      {{/if}}
      {{#unless isFirst}}
      <a class="nextPageAnchor"href="/product/page={{previousP}}">
        <button class="previousPage">Previous Page</button>
      </a>
      {{/unless}}
    </div>
    {{/if}}
    {{!-- "" for products by scent only --}}
    {{#if scentProducts}}
    <div class="button-container">
      {{#if notLast}}
        <a class="nextPageAnchor"href="/scent={{scent}}/page={{nextP}}">
          <button class="nextPage">Next Page</button>
        </a>
      {{/if}}
      {{#unless isFirst}}
      <a class="nextPageAnchor"href="/scent={{scent}}/page={{previousP}}">
        <button class="previousPage">Previous Page</button>
      </a>
      {{/unless}}
    </div>
    {{/if}}
      <script src='../public/js/header.js'></script>
  </main>
</body>

</html>